'use client';

import { useState, useEffect } from 'react';
import { useRouter } from 'next/navigation';
import {
  getSkpTahunanList,
  deleteSkpTahunanDetail,
  submitSkpTahunan,
  type SkpTahunan,
  type SkpTahunanDetail,
} from '@/app/lib/skp-tahunan-api';

export default function SkpTahunanPage() {
  const router = useRouter();
  const [skpList, setSkpList] = useState<SkpTahunan[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');
  const [expandedHeaders, setExpandedHeaders] = useState<Set<number>>(new Set());

  // Filters
  const [filterTahun, setFilterTahun] = useState<string>('');
  const [filterStatus, setFilterStatus] = useState<string>('');

  useEffect(() => {
    loadSkpTahunan();
  }, [filterTahun, filterStatus]);

  const loadSkpTahunan = async () => {
    try {
      setLoading(true);
      setError('');

      const filters: { tahun?: number; status?: string } = {};
      if (filterTahun) filters.tahun = parseInt(filterTahun);
      if (filterStatus) filters.status = filterStatus;

      const data = await getSkpTahunanList(filters);
      setSkpList(data);
    } catch (err: any) {
      setError(err.message || 'Gagal memuat data SKP Tahunan');
    } finally {
      setLoading(false);
    }
  };

  const toggleExpand = (headerId: number) => {
    const newExpanded = new Set(expandedHeaders);
    if (newExpanded.has(headerId)) {
      newExpanded.delete(headerId);
    } else {
      newExpanded.add(headerId);
    }
    setExpandedHeaders(newExpanded);
  };

  const handleDeleteDetail = async (detailId: number) => {
    if (!confirm('Apakah Anda yakin ingin menghapus butir kinerja ini?')) {
      return;
    }

    try {
      await deleteSkpTahunanDetail(detailId);
      alert('Butir kinerja berhasil dihapus');
      loadSkpTahunan();
    } catch (err: any) {
      alert(err.message || 'Gagal menghapus butir kinerja');
    }
  };

  const handleSubmit = async (id: number) => {
    if (!confirm('Apakah Anda yakin ingin mengajukan SKP Tahunan ini untuk persetujuan?')) {
      return;
    }

    try {
      await submitSkpTahunan(id);
      alert('SKP Tahunan berhasil diajukan untuk persetujuan');
      loadSkpTahunan();
    } catch (err: any) {
      alert(err.message || 'Gagal mengajukan SKP Tahunan');
    }
  };

  const getStatusBadgeColor = (status: string) => {
    switch (status) {
      case 'DRAFT':
        return 'bg-gray-500 text-white';
      case 'DIAJUKAN':
        return 'bg-blue-500 text-white';
      case 'DISETUJUI':
        return 'bg-green-500 text-white';
      case 'DITOLAK':
        return 'bg-red-500 text-white';
      default:
        return 'bg-gray-400 text-white';
    }
  };

  return (
    <div className="min-h-screen bg-gray-50">
      <div className="container mx-auto px-4 py-8">
        {/* Header with Back Button */}
        <div className="mb-8">
          <div className="flex items-center gap-4 mb-4">
            <button
              onClick={() => router.push('/asn/dashboard')}
              className="flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors"
            >
              <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
              </svg>
              <span className="font-medium">Kembali ke Dashboard</span>
            </button>
          </div>
          <h1 className="text-3xl font-bold text-gray-900 mb-2">SKP Tahunan</h1>
          <p className="text-gray-600">
            Kelola Sasaran Kinerja Pegawai (SKP) Tahunan Anda. Setiap SKP Tahunan dapat memiliki multiple butir kinerja.
          </p>
        </div>

        {/* Info Box */}
        <div className="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6">
          <div className="flex">
            <div className="flex-shrink-0">
              <svg className="h-5 w-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fillRule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clipRule="evenodd" />
              </svg>
            </div>
            <div className="ml-3">
              <p className="text-sm text-blue-700">
                <strong>Struktur Baru:</strong> Anda dapat menambahkan multiple butir kinerja untuk setiap tahun. Form dapat di-submit berkali-kali untuk menambahkan butir kinerja baru.
              </p>
            </div>
          </div>
        </div>

        {/* Filters and Actions */}
        <div className="bg-white rounded-lg shadow p-6 mb-6">
          <div className="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            {/* Filters */}
            <div className="flex flex-col sm:flex-row gap-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  Filter Tahun
                </label>
                <select
                  value={filterTahun}
                  onChange={(e) => setFilterTahun(e.target.value)}
                  className="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900 bg-white"
                >
                  <option value="" className="text-gray-500">Semua Tahun</option>
                  <option value="2024" className="text-gray-900">2024</option>
                  <option value="2025" className="text-gray-900">2025</option>
                  <option value="2026" className="text-gray-900">2026</option>
                  <option value="2027" className="text-gray-900">2027</option>
                </select>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  Filter Status
                </label>
                <select
                  value={filterStatus}
                  onChange={(e) => setFilterStatus(e.target.value)}
                  className="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900 bg-white"
                >
                  <option value="" className="text-gray-500">Semua Status</option>
                  <option value="DRAFT" className="text-gray-900">DRAFT</option>
                  <option value="DIAJUKAN" className="text-gray-900">DIAJUKAN</option>
                  <option value="DISETUJUI" className="text-gray-900">DISETUJUI</option>
                  <option value="DITOLAK" className="text-gray-900">DITOLAK</option>
                </select>
              </div>
            </div>

            {/* Add Button */}
            <div>
              <button
                onClick={() => router.push('/asn/skp-tahunan/tambah')}
                className="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2"
              >
                <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4v16m8-8H4" />
                </svg>
                Tambah Butir Kinerja
              </button>
            </div>
          </div>
        </div>

        {/* Error Message */}
        {error && (
          <div className="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
            <p className="text-red-700">{error}</p>
          </div>
        )}

        {/* Loading State */}
        {loading ? (
          <div className="text-center py-12">
            <div className="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
            <p className="mt-4 text-gray-600">Memuat data SKP Tahunan...</p>
          </div>
        ) : skpList.length === 0 ? (
          /* Empty State */
          <div className="bg-white rounded-lg shadow p-12 text-center">
            <svg className="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 className="mt-4 text-lg font-medium text-gray-900">Belum ada SKP Tahunan</h3>
            <p className="mt-2 text-gray-500">
              Mulai dengan membuat butir kinerja pertama untuk SKP Tahunan Anda.
            </p>
            <button
              onClick={() => router.push('/asn/skp-tahunan/tambah')}
              className="mt-6 bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors"
            >
              Tambah Butir Kinerja
            </button>
          </div>
        ) : (
          /* Header-Detail List */
          <div className="space-y-4">
            {skpList.map((header) => (
              <div key={header.id} className="bg-white rounded-lg shadow overflow-hidden">
                {/* Header Row */}
                <div className="p-6 border-b border-gray-200">
                  <div className="flex items-center justify-between">
                    <div className="flex-1">
                      <div className="flex items-center gap-4 mb-2">
                        <h3 className="text-xl font-bold text-gray-900">
                          SKP Tahunan {header.tahun}
                        </h3>
                        <span className={`px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full ${getStatusBadgeColor(header.status)}`}>
                          {header.status}
                        </span>
                      </div>
                      <div className="text-sm text-gray-600 space-y-1">
                        <p>Jumlah Butir Kinerja: <span className="font-semibold text-gray-900">{header.total_butir_kinerja || 0}</span></p>
                        <p>Total Target: <span className="font-semibold text-gray-900">{header.total_target || 0}</span></p>
                        <p>Total Realisasi: <span className="font-semibold text-gray-900">{header.total_realisasi || 0}</span></p>
                        <p>Capaian: <span className="font-semibold text-gray-900">{header.capaian_persen || 0}%</span></p>
                      </div>
                      {header.catatan_atasan && (
                        <div className="mt-2 text-sm">
                          <span className="font-medium text-gray-700">Catatan Atasan:</span>
                          <p className="text-gray-600 mt-1">{header.catatan_atasan}</p>
                        </div>
                      )}
                    </div>

                    {/* Actions */}
                    <div className="flex items-center gap-3 ml-6">
                      {/* Add butir kinerja button - only for DRAFT or DITOLAK */}
                      {header.can_add_details && (
                        <button
                          onClick={() => router.push(`/asn/skp-tahunan/tambah?tahun=${header.tahun}`)}
                          className="text-blue-600 hover:text-blue-900 px-3 py-2 rounded border border-blue-600 hover:bg-blue-50 transition-colors text-sm"
                          title="Tambah Butir Kinerja"
                        >
                          + Butir Kinerja
                        </button>
                      )}

                      {/* Submit button */}
                      {header.can_be_submitted && (
                        <button
                          onClick={() => handleSubmit(header.id)}
                          className="text-green-600 hover:text-green-900"
                          title="Ajukan untuk Persetujuan"
                        >
                          <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                        </button>
                      )}

                      {/* Expand/Collapse button */}
                      <button
                        onClick={() => toggleExpand(header.id)}
                        className="text-gray-600 hover:text-gray-900"
                        title={expandedHeaders.has(header.id) ? 'Tutup' : 'Lihat Detail'}
                      >
                        <svg className={`w-6 h-6 transition-transform ${expandedHeaders.has(header.id) ? 'rotate-180' : ''}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 9l-7 7-7-7" />
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>

                {/* Details (Expandable) */}
                {expandedHeaders.has(header.id) && header.details && header.details.length > 0 && (
                  <div className="p-6 bg-gray-50">
                    <h4 className="text-sm font-semibold text-gray-700 mb-4 uppercase">Daftar Butir Kinerja</h4>
                    <div className="space-y-3">
                      {header.details.map((detail: SkpTahunanDetail, index: number) => (
                        <div key={detail.id} className="bg-white p-4 rounded-lg border border-gray-200">
                          <div className="flex items-start justify-between">
                            <div className="flex-1">
                              <div className="flex items-start gap-3">
                                <span className="inline-flex items-center justify-center w-6 h-6 rounded-full bg-blue-100 text-blue-800 text-xs font-semibold">
                                  {index + 1}
                                </span>
                                <div className="flex-1">
                                  <p className="text-sm font-medium text-gray-900">
                                    <strong>Sasaran:</strong> {detail.sasaran_kegiatan?.sasaran_kegiatan || '-'}
                                  </p>
                                  <p className="text-sm text-gray-600 mt-1">
                                    <strong>Indikator:</strong> {detail.indikator_kinerja?.indikator_kinerja || '-'}
                                  </p>
                                  <div className="mt-2 grid grid-cols-3 gap-4 text-sm">
                                    <div>
                                      <span className="text-gray-500">Target:</span>
                                      <p className="font-semibold text-gray-900">{detail.target_tahunan} {detail.satuan}</p>
                                    </div>
                                    <div>
                                      <span className="text-gray-500">Realisasi:</span>
                                      <p className="font-semibold text-gray-900">{detail.realisasi_tahunan} {detail.satuan}</p>
                                    </div>
                                    <div>
                                      <span className="text-gray-500">Capaian:</span>
                                      <p className="font-semibold text-gray-900">{detail.capaian_persen || 0}%</p>
                                    </div>
                                  </div>
                                  {detail.rencana_aksi && (
                                    <p className="text-sm text-gray-600 mt-2">
                                      <strong>Rencana Aksi:</strong> {detail.rencana_aksi}
                                    </p>
                                  )}
                                </div>
                              </div>
                            </div>

                            {/* Detail Actions - only for DRAFT or DITOLAK */}
                            {header.can_edit_details && (
                              <div className="flex gap-2 ml-4">
                                <button
                                  onClick={() => router.push(`/asn/skp-tahunan/edit/${detail.id}`)}
                                  className="text-blue-600 hover:text-blue-900"
                                  title="Edit"
                                >
                                  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                  </svg>
                                </button>
                                <button
                                  onClick={() => handleDeleteDetail(detail.id)}
                                  className="text-red-600 hover:text-red-900"
                                  title="Hapus"
                                >
                                  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                  </svg>
                                </button>
                              </div>
                            )}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
}
