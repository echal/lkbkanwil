'use client';

import { useEffect, useState } from 'react';
import { useRouter } from 'next/navigation';
import { useAuth } from '@/app/providers/AuthProvider';
import { createRencanaKerja } from '@/app/lib/rencana-kerja-api';
import { getApprovedSkpTahunanList, type SkpTahunan } from '@/app/lib/skp-tahunan-api';

export default function TambahRencanaKerjaPage() {
  const { user, isAuthenticated, loading: authLoading } = useAuth();
  const router = useRouter();

  // Form data - PERUBAHAN: skp_tahunan_id WAJIB, hapus sasaran & indikator
  const [formData, setFormData] = useState({
    skp_tahunan_id: 0,
    triwulan: 'I' as 'I' | 'II' | 'III' | 'IV',
    target: 0,
    satuan: '',
    catatan_asn: '',
  });

  // Master data - PERUBAHAN: hanya SKP Tahunan yang DISETUJUI
  const [skpTahunanList, setSkpTahunanList] = useState<SkpTahunan[]>([]);
  const [selectedSkp, setSelectedSkp] = useState<SkpTahunan | null>(null);

  // Loading states
  const [loadingMaster, setLoadingMaster] = useState(true);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState<string | null>(null);

  // RBAC Guard
  useEffect(() => {
    if (authLoading) return;

    if (!isAuthenticated) {
      router.push('/login');
      return;
    }

    if (user?.role !== 'ASN') {
      router.push('/unauthorized');
      return;
    }

    loadMasterData();
  }, [user, isAuthenticated, authLoading, router]);

  const loadMasterData = async () => {
    try {
      setLoadingMaster(true);
      const data = await getApprovedSkpTahunanList();
      setSkpTahunanList(data);

      if (data.length === 0) {
        setError('Anda belum memiliki SKP Tahunan yang disetujui. Silakan buat SKP Tahunan terlebih dahulu.');
      }
    } catch (err: any) {
      setError(err.message || 'Gagal memuat SKP Tahunan');
      console.error('Failed to load SKP Tahunan:', err);
    } finally {
      setLoadingMaster(false);
    }
  };

  // Update selected SKP when skp_tahunan_id changes
  useEffect(() => {
    if (formData.skp_tahunan_id > 0) {
      const skp = skpTahunanList.find(s => s.id === formData.skp_tahunan_id);
      setSelectedSkp(skp || null);

      // Auto-fill satuan dari SKP Tahunan
      if (skp) {
        setFormData(prev => ({ ...prev, satuan: skp.satuan }));
      }
    } else {
      setSelectedSkp(null);
    }
  }, [formData.skp_tahunan_id, skpTahunanList]);

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();

    // Validasi
    if (formData.sasaran_kegiatan_id === 0) {
      setError('Sasaran Kegiatan harus dipilih');
      return;
    }

    if (formData.indikator_kinerja_id === 0) {
      setError('Indikator Kinerja harus dipilih');
      return;
    }

    if (formData.target <= 0) {
      setError('Target harus lebih besar dari 0');
      return;
    }

    if (!formData.satuan.trim()) {
      setError('Satuan harus diisi');
      return;
    }

    try {
      setLoading(true);
      setError(null);

      await createRencanaKerja(formData);

      alert('Rencana Kerja berhasil ditambahkan!');
      router.push('/asn/rencana-kerja');
    } catch (err: any) {
      setError(err.message || 'Gagal menambahkan Rencana Kerja');
      console.error('Failed to create Rencana Kerja:', err);
    } finally {
      setLoading(false);
    }
  };

  const handleCancel = () => {
    if (confirm('Batalkan dan kembali? Data yang diisi akan hilang.')) {
      router.push('/asn/rencana-kerja');
    }
  };

  // Loading auth
  if (authLoading || loadingMaster) {
    return (
      <div className="p-8">
        <div className="animate-pulse space-y-6">
          <div className="h-8 bg-gray-200 rounded w-1/3"></div>
          <div className="h-64 bg-gray-200 rounded"></div>
        </div>
      </div>
    );
  }

  if (!isAuthenticated || user?.role !== 'ASN') {
    return null;
  }

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Top Navigation Bar */}
      <div className="bg-white shadow">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between items-center h-16">
            <div className="flex items-center space-x-4">
              <button
                onClick={() => router.push('/asn/rencana-kerja')}
                className="text-gray-600 hover:text-gray-900"
              >
                <svg
                  className="h-6 w-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M15 19l-7-7 7-7"
                  />
                </svg>
              </button>
              <h1 className="text-xl font-semibold text-gray-900">
                Tambah Rencana Kerja (SKP Triwulan)
              </h1>
            </div>
          </div>
        </div>
      </div>

      <div className="p-8">
        <div className="max-w-3xl mx-auto">
          {/* Form Card */}
          <div className="bg-white rounded-lg shadow p-6">
            <h2 className="text-2xl font-bold text-gray-800 mb-6">
              Form Tambah Rencana Kerja
            </h2>

            {/* Error message */}
            {error && (
              <div className="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                {error}
              </div>
            )}

            <form onSubmit={handleSubmit} className="space-y-6">
              {/* Sasaran Kegiatan */}
              <div>
                <label
                  htmlFor="sasaran_kegiatan_id"
                  className="block text-sm font-medium text-gray-700 mb-2"
                >
                  Sasaran Kegiatan <span className="text-red-500">*</span>
                </label>
                <select
                  id="sasaran_kegiatan_id"
                  name="sasaran_kegiatan_id"
                  value={formData.sasaran_kegiatan_id}
                  onChange={(e) =>
                    setFormData({ ...formData, sasaran_kegiatan_id: parseInt(e.target.value) })
                  }
                  className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900"
                  required
                >
                  <option value="0">-- Pilih Sasaran Kegiatan --</option>
                  {sasaranList.map((sasaran) => (
                    <option key={sasaran.id} value={sasaran.id}>
                      {sasaran.sasaran_kegiatan}
                    </option>
                  ))}
                </select>
                <p className="mt-2 text-sm text-gray-500">
                  Sasaran strategis organisasi sesuai PERKIN
                </p>
              </div>

              {/* Indikator Kinerja */}
              <div>
                <label
                  htmlFor="indikator_kinerja_id"
                  className="block text-sm font-medium text-gray-700 mb-2"
                >
                  Indikator Kinerja <span className="text-red-500">*</span>
                </label>
                <select
                  id="indikator_kinerja_id"
                  name="indikator_kinerja_id"
                  value={formData.indikator_kinerja_id}
                  onChange={(e) =>
                    setFormData({ ...formData, indikator_kinerja_id: parseInt(e.target.value) })
                  }
                  className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900"
                  required
                  disabled={formData.sasaran_kegiatan_id === 0 || loadingIndikator}
                >
                  <option value="0">
                    {loadingIndikator
                      ? 'Loading...'
                      : formData.sasaran_kegiatan_id === 0
                      ? '-- Pilih Sasaran Kegiatan terlebih dahulu --'
                      : '-- Pilih Indikator Kinerja --'}
                  </option>
                  {indikatorList.map((indikator) => (
                    <option key={indikator.id} value={indikator.id}>
                      {indikator.indikator_kinerja}
                    </option>
                  ))}
                </select>
                <p className="mt-2 text-sm text-gray-500">
                  Indikator kinerja terkait sasaran yang dipilih
                </p>
              </div>

              {/* Tahun dan Triwulan */}
              <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label
                    htmlFor="tahun"
                    className="block text-sm font-medium text-gray-700 mb-2"
                  >
                    Tahun <span className="text-red-500">*</span>
                  </label>
                  <select
                    id="tahun"
                    name="tahun"
                    value={formData.tahun}
                    onChange={(e) =>
                      setFormData({ ...formData, tahun: parseInt(e.target.value) })
                    }
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900"
                    required
                  >
                    {[2024, 2025, 2026, 2027].map(year => (
                      <option key={year} value={year}>{year}</option>
                    ))}
                  </select>
                </div>

                <div>
                  <label
                    htmlFor="triwulan"
                    className="block text-sm font-medium text-gray-700 mb-2"
                  >
                    Triwulan <span className="text-red-500">*</span>
                  </label>
                  <select
                    id="triwulan"
                    name="triwulan"
                    value={formData.triwulan}
                    onChange={(e) =>
                      setFormData({ ...formData, triwulan: e.target.value as 'I' | 'II' | 'III' | 'IV' })
                    }
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900"
                    required
                  >
                    <option value="I">Triwulan I (Jan-Mar)</option>
                    <option value="II">Triwulan II (Apr-Jun)</option>
                    <option value="III">Triwulan III (Jul-Sep)</option>
                    <option value="IV">Triwulan IV (Okt-Des)</option>
                  </select>
                </div>
              </div>

              {/* Target dan Satuan */}
              <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label
                    htmlFor="target"
                    className="block text-sm font-medium text-gray-700 mb-2"
                  >
                    Target <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="number"
                    id="target"
                    name="target"
                    value={formData.target || ''}
                    onChange={(e) =>
                      setFormData({ ...formData, target: parseFloat(e.target.value) || 0 })
                    }
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900 placeholder:text-gray-400"
                    placeholder="Contoh: 100"
                    min="0"
                    step="0.01"
                    required
                  />
                  <p className="mt-2 text-sm text-gray-500">
                    Target yang ingin dicapai
                  </p>
                </div>

                <div>
                  <label
                    htmlFor="satuan"
                    className="block text-sm font-medium text-gray-700 mb-2"
                  >
                    Satuan <span className="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    id="satuan"
                    name="satuan"
                    value={formData.satuan}
                    onChange={(e) =>
                      setFormData({ ...formData, satuan: e.target.value })
                    }
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900 placeholder:text-gray-400"
                    placeholder="Contoh: %, dokumen, kegiatan"
                    required
                  />
                  <p className="mt-2 text-sm text-gray-500">
                    Satuan pengukuran target
                  </p>
                </div>
              </div>

              {/* Catatan ASN */}
              <div>
                <label
                  htmlFor="catatan_asn"
                  className="block text-sm font-medium text-gray-700 mb-2"
                >
                  Catatan (Opsional)
                </label>
                <textarea
                  id="catatan_asn"
                  name="catatan_asn"
                  rows={4}
                  value={formData.catatan_asn}
                  onChange={(e) =>
                    setFormData({ ...formData, catatan_asn: e.target.value })
                  }
                  className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900 placeholder:text-gray-400"
                  placeholder="Tambahkan catatan jika diperlukan"
                />
              </div>

              {/* Info Box */}
              <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div className="flex">
                  <div className="flex-shrink-0">
                    <svg
                      className="h-5 w-5 text-blue-400"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fillRule="evenodd"
                        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                        clipRule="evenodd"
                      />
                    </svg>
                  </div>
                  <div className="ml-3">
                    <h3 className="text-sm font-medium text-blue-800">
                      Catatan
                    </h3>
                    <div className="mt-2 text-sm text-blue-700">
                      <ul className="list-disc list-inside space-y-1">
                        <li>Pilih Sasaran Kegiatan dan Indikator Kinerja dari master yang disediakan Admin</li>
                        <li>Tahun dan Triwulan menentukan periode pelaksanaan SKP Anda</li>
                        <li>Target dan Satuan adalah komitmen yang Anda tetapkan untuk triwulan ini</li>
                        <li>Realisasi akan diupdate secara berkala sesuai progress</li>
                        <li>Status awal adalah DRAFT, ajukan untuk persetujuan Atasan setelah selesai</li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>

              {/* Action Buttons */}
              <div className="flex justify-end space-x-3 pt-4">
                <button
                  type="button"
                  onClick={handleCancel}
                  className="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition"
                  disabled={loading}
                >
                  Batal
                </button>
                <button
                  type="submit"
                  className="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition disabled:bg-gray-400 disabled:cursor-not-allowed"
                  disabled={loading}
                >
                  {loading ? 'Menyimpan...' : 'Simpan'}
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  );
}
